apiVersion: apps/v1
kind: Deployment
metadata:
  name: sidekiq
spec:
  replicas: 1
  selector:
    matchLabels:
      app: sidekiq
  template:
    metadata:
      labels:
        app: sidekiq
    spec:
      containers:
        - name: sidekiq
          image: ndrean/k8-rails-sdkq:v0
          command: ["bundle"]
          args: ["exec", "sidekiq"]
          env:
            - name: REDIS_URL
              value: redis://redis.default.svc.cluster.local:6379/
